<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/template.css">
    <link rel="stylesheet" href="/css/transaction.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.6/dist/sweetalert2.all.min.js"></script>

    <link rel="icon" type="image/png" href="/img/Logo/LedgerTrips-logos_white.png">

    <title>Transaction Records</title>

</head>

<body>
    <div class="container-fluid main-wrapper">
        <!-- Sidebar -->
        <div class="row">
            <div class="col-10 contentWrapper p-0">
                <!-- Header -->
                <div class="header">
                    <div class="headerWrapper">
                        <h1 class="mx-3">Transaction Records</h1>
                    </div>
                </div>
                <!-- Header -->
                <div class="contents">
                    <div class="content-container  overflow-scroll">
                        <table class="table table-bordered text-center ">
                            <thead class="p-3">
                                <tr>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Journal No
                                    </th>
                                    <th>
                                        Sender
                                    </th>
                                    <th>
                                        Receiver
                                    </th>
                                    <th>
                                        Result
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach((transaction)=> { %>
                                    <tr>
                                        <td>
                                            <%= transaction.amount%>
                                        </td>
                                        <td>
                                            <%= transaction.hash %>
                                        </td>
                                        <td>
                                            <%= transaction.sender %>
                                        </td>
                                        <td>
                                            <%= transaction.receiver %>
                                        </td>
                                        <td>
                                            <%= transaction.result %>
                                        </td>
                                        <td>
                                            <%= transaction.date %> 2023
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
        <!-- Sidebar -->
    </div>

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.3/axios.min.js"></script>
    <script src="/js/transaction.js"></script>
</body>

</html>