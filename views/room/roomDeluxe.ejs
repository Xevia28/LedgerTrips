    <div class="container">
        <div class="search-container">
            <div class="form-container">
                <form class="form">
                    <div class="form-row row">
                        <div class="form-group search-input col-lg-3 col-md-9 col-sm-12">
                            <div class="input-group">
                                <div class="form-control property-name search-readOnly">LEDGERTRIPS, Thimphu</div>
                            </div>
                        </div>
                        <div class="form-group col-lg-2 col-md-9 col-sm-12 input-fields search-readOnly">
                            <input type="date" id="checkIn" class="form-control" value="<%= newSearch.checkinDate %>">
                        </div>
                        <div class="form-group col-lg-2 col-md-9 col-sm-12 input-fields search-readOnly">
                            <input type="date" id="checkOut" class="form-control" value="<%= newSearch.checkoutDate %>">
                        </div>
                        <div class="form-group col-lg-3 col-md-9 col-sm-12 search-readOnly">
                            <div class="input-group" id="roomDiv">
                                <div id="rooms" class="form-control roomsDes">
                                    <%= newSearch.fValue%>
                                </div>
                            </div>
                        </div>
                        <div class="search-btn-container col-lg-2 col-md-6 col-sm-12">
                            <!-- <button class="search-btn btn btn-primary">Go back to search</button> -->
                            <a href="/" class="go-search">Go back to search</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="room-type">
        <div id="roomName" class="container">
            DELUXE ROOM
