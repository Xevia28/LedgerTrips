    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/template.css">
    <link rel="stylesheet" href="/css/AdminBookings.css">
    <link rel="icon" type="image/png" href="/img/Logo/LedgerTrips-logos_white.png">
    <title>Bookings</title>
</head>

<body>
    <div class="container-fluid main-wrapper">
        <!-- Sidebar -->
        <div class="row">
            <div class="col-2 sidebar">
                <div class="logo">
                    <img src="/img/Logo/LedgerTrips-logos_white.png" alt="">
                </div>
                <div class="calendar-btn-wrapper" style="pointer-events: none;">
                    <a href="/api/calendar" class="calendar-btn">
                        <span class="material-icons">
                            event_available
                        </span>
                        <p>Calendar</p>
                    </a>
                </div>
                <div class="sidebar-nav-links">
                    <a href="/api/adminroom/bookedrooms" class="active-link">
                        <span class="material-icons">
                            grid_view
                        </span>
                        <p>Booking Records</p>
                    </a>
                    <a href="/api/adminroom">
                        <span class="material-icons">
                            library_books
                        </span>
                        <p>Room</p>
                    </a>
                    <a href="/api/admin/profile">
                        <span class="material-icons">
                            person_outline </span>
                        <p>Profile</p>
                    </a>
                </div>
                <div class="admin-profile">
                    <div class="iconWrapper">

                        <span class="material-icons profileImg">
                            account_circle
                        </span>
                    </div>
                    <div class="adminDetails">
                        <h4 id="adminName"></h4>
                        <p>Admin</p>
                    </div>
                </div>
                <div class="logout-btn-wrapper">

                    <button class="logout-btn">
                        <span class="material-icons">
                            logout
                        </span>
                        <p>Logout</p>
                    </button>
                </div>
            </div>
            <div class="col-2"></div>
            <div class="col-10 contentWrapper p-0">
                <!-- Header -->
                <div class="header">
                    <div class="menuWrapper">
                        <label for="">
                            <span class="material-icons">
                                menu
                            </span>
                        </label>
                    </div>
                </div>
                <div class="search-wrapper">
                    <div class="search-component col-6">
                        <input type="text" class="search-input col-11 searchInput" id="searchInput"
                            placeholder="Search..." oninput="handleSearch()">
                        <span class="material-icons search-icon">
                            search
                        </span>
                    </div>

                </div>

                <!-- Cards -->
                <div class="row cards-row card-wrapper">
                    <div class="col-3 mainCard">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-icon">
                                    <span class="material-icons-outlined stat-icon">
                                        bookmarks
                                    </span>
                                    <h5 id="bookingNum" class="card-number"></h5>
                                </div>
                                <div class="card-stats">
                                    <p class="card-name">Total Booking</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-icon">
                                    <span class="material-icons stat-icon small">
                                        bed
                                    </span>
                                    <h5 id="roomNum" class="card-number"></h5>
                                </div>
                                <div class="card-stats">
                                    <p class="card-name">Types of Rooms</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-icon">
                                    <span class="material-icons-outlined stat-icon">
                                        event_available
                                    </span>
                                    <h5 id="totalRoom" class="card-number">16</h5>
                                </div>
                                <div class="card-stats">
                                    <p class="card-name">Total Rooms</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-icon">
                                    <span class="material-icons-outlined stat-icon small">
                                        room_service
                                    </span>
                                    <h5 class="card-number">24/7</h5>
                                </div>
                                <div class="card-stats">
                                    <p class="card-name">Services</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- bookings -->
                <div id="mainDiv" class="row cards-row card-wrapper">
                    <!-- <div class="col-6 booking-card" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <div class="card-booking">
